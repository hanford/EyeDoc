<div align="center">

	<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :title %><br />
  <%= f.text_field :title %></div>

      <div><%= f.label :name %><br />
  <%= f.text_field :name %></div>

    
  <br />
  <table>
  	<tr>
 <%= f.label :eyecolor %>
 <br />
  <%= fields_for :patient do |f| %>
  <th><%= f.label :Blue %>
  <%= radio_button_tag(:eyecolor, "Blue")%></th>
    <th><div><%= f.label :Brown %>
  <%= radio_button_tag(:eyecolor, "Brown")%></th>
   <th> <div><%= f.label :Green %>
  <%= radio_button_tag(:eyecolor, "Green")%></th>
  <% end %>
</tr>
  </table>
<br />
  <div><%= f.label :email %><br />
  <%= f.email_field :email, :autofocus => true %></div>

  <div><%= f.label :password %><br />
  <%= f.password_field :password %></div>

  <div><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation %></div>

  <div><%= f.submit "Sign up" %></div>
<% end %>

<%= render "devise/shared/links" %>

</div>
